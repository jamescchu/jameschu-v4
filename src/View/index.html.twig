{% extends 'base.html.twig' %}

{% block content %}
<ul class="works">
  {% for work in works %}
  <li style="background-image: url('/thumbnails/{{ work.slug}}.png');">
    <a href="/works/{{ work.slug }}">
      <div class="info">
        <h2>{{ work.name }}</h2>
        <h3>{{ work.position }}</h3>
      </div>
    </a>
  </li>
  {% endfor %}
</ul>
{% endblock %}
